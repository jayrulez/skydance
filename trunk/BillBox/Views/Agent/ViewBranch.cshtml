@model BillBox.Models.AgentBranch

@{
    ViewBag.Title = "View Branch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row main">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Default")</li>
            <li>@Html.ActionLink("Agents", "Index", "Agent")</li>
            <li>@Html.ActionLink(Model.Agent.Name, "Details", "Agent", new { agentId = Model.Agent.AgentId }, null)</li>
            <li>@Html.ActionLink("Branches", "ListBranches", "Agent", new { agentId = Model.Agent.AgentId }, null)</li>
            <li class="active">@Model.Name</li>
        </ol>
        <!--<h1 class="page-header">View Branch</h1>-->
        <div class="panel panel-default">
            <div class="panel-heading">
                Branch Information
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>@Html.DisplayNameFor(m => m.Name)</th>
                                <th>@Html.DisplayNameFor(m => m.AddressStreet)</th>
                                <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.FaxNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.EmailAddress)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>

                                <td>@Html.DisplayFor(m => m.Name)</td>

                                <td>
                                    @Html.DisplayFor(m => m.AddressStreet)
                                    <br />
                                    @Html.DisplayFor(m => m.AddressCity)
                                    @if (Model.Parish != null)
                                    {
                                        <br />
                                        @Html.DisplayFor(m => m.Parish.Name)
                                    }
                                </td>

                                <td>@Html.DisplayFor(model => model.ContactNumber)</td>

                                <td>@Html.DisplayFor(model => model.FaxNumber)</td>

                                <td>@Html.DisplayFor(model => model.EmailAddress)</td>
                            </tr>
                        </tbody>

                    </table>
                </div>
            </div>
            <div class="panel-footer">
                <ul class="details-menu">
                    <li>@Html.ActionLink("Edit", "EditBranch", new { branchId = Model.BranchId }, new { @class = "btn btn-default" })</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
