@{
    var captureFields = ViewBag.captureFields as IEnumerable<BillBox.Models.PaymentTypeCaptureField>;
}

@foreach (BillBox.Models.PaymentTypeCaptureField captureField in captureFields)
{
    <div class="row clearfix">
        <label for="capture-field-@captureField.Name.ToLower()">@captureField.DisplayName</label>
        <input type="text" name="paymentTypeCaptureField[@captureField.Name.ToLower()]" id="capture-field-@captureField.Name.ToLower()" />
    </div>
}