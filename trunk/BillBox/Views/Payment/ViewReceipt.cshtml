@model BillBox.Models.Bill

@{
    ViewBag.Title = "View Receipt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <!--<h1 class="page-header">View Receipt</h1>-->
        <div class="panel panel-default">
            <div class="panel-heading">
                View Receipt
            </div>
            <div class="panel-body">
                <dl>
                    <dt>@Html.DisplayNameFor(m => m.ReceiptNumber)</dt>
                    <dd>@Html.DisplayFor(m => m.ReceiptNumber)</dd>

                    <dt>@Html.DisplayNameFor(m => m.SubscriberId)</dt>
                    <dd>@Html.DisplayFor(m => m.Subscriber.Name)</dd>

                    <dt>@Html.DisplayNameFor(m => m.Date)</dt>
                    <dd>@Html.DisplayFor(m => m.Date)</dd>

                    <dt>Total</dt>
                    <dd>@BillBox.Common.Util.DisplayForDollar(Model.Amount())</dd>
                </dl>
            </div>
            <div class="panel-footer">
                <ul class="action-menu">
                    <li><a href="#">Print</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>
