@{
    var captureFields = ViewBag.captureFields as IEnumerable<BillBox.Models.PaymentMethodCaptureField>;
}

@foreach (BillBox.Models.PaymentMethodCaptureField captureField in captureFields)
{
    <div class="form-group">
        <label for="capture-field-@captureField.Name.ToLower()">@captureField.DisplayName</label>
        <input type="text" name="CaptureFields[@captureField.Name]" class="form-control" id="capture-field-@captureField.Name.ToLower()" />
    </div>
}