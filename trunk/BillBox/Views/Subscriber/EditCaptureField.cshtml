@model BillBox.Models.CaptureField

@{
    ViewBag.Title = "EditCapturedField";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var subscriber = ViewBag.subscriber as BillBox.Models.Subscriber;
}


<div class="row main">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Default")</li>
            <li>@Html.ActionLink("Subscribers", "Index", "Subscriber")</li>
            <li>@Html.ActionLink(subscriber.Name, "Details", "Subscriber", new { id = subscriber.SubscriberId })</li>
            <li class="active">Edit Capture Field</li>
        </ol>
        <!--<h1 class="page-header">Add Capture Field</h1>-->
        <div class="panel panel-default">
            <div class="panel-heading">
                Capture Field Information
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("EditCaptureField", "Subscriber", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.CaptureFieldId)
                            @Html.HiddenFor(m => m.SubscriberId)

                            <div class="form-group">
                                @Html.LabelFor(m => m.Name)
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.DisplayName)
                                @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.DisplayName)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Type)
                                @Html.DropDownListFor(m => m.Type, BillBox.Common.Util.GetFieldTypes(), null, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Type)
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.OrderNum)
                                @Html.TextBoxFor(m => m.OrderNum, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.OrderNum)
                            </div>

                            <button type="submit" class="btn btn-default">Save</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
