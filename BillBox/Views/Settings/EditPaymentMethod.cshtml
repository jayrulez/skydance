@model BillBox.Models.PaymentMethod

@{
    ViewBag.Title = "Edit Payment Method";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row main">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Default")</li>
            <li>@Html.ActionLink("Settings", "Index", "Settings")</li>
            <li>@Html.ActionLink("Payment Methods", "ListPaymentMethods", "Settings")</li>
            <li>@Html.ActionLink(Model.Name, "ViewPaymentMethod", "Settings", new { paymentMethodId = Model.PaymentMethodId }, null)</li>
            <li class="active">Edit Payment Method</li>
        </ol>
        <!--<h1 class="page-header">Edit Payment Method</h1>-->
        <div class="panel panel-default">
            <div class="panel-heading">
                Payment Method Information
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("EditPaymentMethod", "Settings", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.PaymentMethodId)

                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "col-sm-5 control-label" })
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                            </div>
                            
                            <div class="form-group">
                                <div class="col-sm-offset-5 col-sm-7">
                                    <button type="submit" class="btn btn-default">Save</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

