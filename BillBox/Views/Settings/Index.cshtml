@model IEnumerable<BillBox.Models.Setting>

@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <!--<h1 class="page-header">Create Agent</h1>-->
        <div class="panel panel-default">
            <div class="panel-heading">
                General Settings
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("SaveSettings", "Settings", FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            foreach (BillBox.Models.Setting setting in Model)
                            {
                            <div class="form-group">
                                @Html.Label(setting.DisplayName)
                                @Html.TextBox(setting.Name, setting.Value, new { @class = "form-control" })
                            </div>
                            }
                            <button type="submit" class="btn btn-default">Save Settings</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
