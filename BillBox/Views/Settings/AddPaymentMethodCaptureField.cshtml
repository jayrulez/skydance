@model BillBox.Models.PaymentMethodCaptureField

@{
    ViewBag.Title = "Add Payment Method Capture Field";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var paymentMethod = ViewBag.paymentMethod as BillBox.Models.PaymentMethod;
}


<div class="row main">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Default")</li>
            <li>@Html.ActionLink("Settings", "Index", "Settings")</li>
            <li>@Html.ActionLink("Payment Methods", "ListPaymentMethods", "Settings")</li>
            <li>@Html.ActionLink(paymentMethod.Name, "ViewPaymentMethod", "Settings", new { paymentMethodId = paymentMethod.PaymentMethodId }, null)</li>
            <li class="active">Add Capture Field</li>
        </ol>
        <!--<h1 class="page-header">Add Capture Field</h1>-->
        <div class="panel panel-default">
            <div class="panel-heading">
                Capture Field Information
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm("AddPaymentMethodCaptureField", "Settings", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(m => m.PaymentMethodId)

                            <div class="form-group">
                                @Html.LabelFor(m => m.Name, new { @class = "col-sm-5 control-label" })
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Name)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.DisplayName, new { @class = "col-sm-5 control-label" })
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.DisplayName)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Type, new { @class = "col-sm-5 control-label" })
                                <div class="col-sm-7">
                                    @Html.DropDownListFor(m => m.Type, BillBox.Common.Util.GetFieldTypes(), null, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Type)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.OrderNum, new { @class = "col-sm-5 control-label" })
                                <div class="col-sm-7">
                                    @Html.TextBoxFor(m => m.OrderNum, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.OrderNum)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-offset-5 col-sm-7">
                                    <button type="submit" class="btn btn-default">Save</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

