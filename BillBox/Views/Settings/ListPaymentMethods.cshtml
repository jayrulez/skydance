@model IEnumerable<BillBox.Models.PaymentMethod>
@{
    ViewBag.Title = "Payment Methods";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row main">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Default")</li>
            <li>@Html.ActionLink("Settings", "Index", "Settings")</li>
            <li class="active">Payment Methods</li>
        </ol>
        <div class="panel panel-default">
            <div class="panel-heading">
                Payment Methods
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BillBox.Models.PaymentMethod paymentMethod in Model)
                            {
                                <tr>
                                    <td>@paymentMethod.Name</td>

                                    <td>@Html.ActionLink("View", "ViewPaymentMethod", "Settings", new { paymentMethodId = @paymentMethod.PaymentMethodId }, null) |
                            @Html.ActionLink("Edit", "EditPaymentMethod", "Settings", new { paymentMethodId = @paymentMethod.PaymentMethodId }, null)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="panel-footer">
                <ul class="details-menu">
                    <li>@Html.ActionLink("Add Payment Method", "CreatePaymentMethod", null, new { @class = "btn btn-default" })</li>
                </ul>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
